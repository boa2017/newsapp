<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearLayout1">

    <TextView
        android:id="@+id/title"
        style="@style/title"
        tools:text="This is the headline" />

    <TextView
        android:id="@+id/author"
        style="@style/author"
        tools:text="Surname Name" />

    <LinearLayout style="@style/linearLayout2">

        <TextView
            android:id="@+id/date"
            style="@style/date"
            tools:text="Jun 19, 2017" />

        <TextView
            android:id="@+id/section"
            style="@style/section"
            tools:text="Section" />
    </LinearLayout>

</LinearLayout>